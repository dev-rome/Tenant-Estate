<article class="row mt-5">
  <div class="col-6 offset-3">
    <form action="/buy" method="POST" class="row g-3 form-new">
      <h5 class="new-title">New Home</h5>
      <div class="col-md-6">
        <label for="name" class="form-label">Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="home[name]"
          required
        />
      </div>
      <div class="col-12">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          class="form-control"
          id="location"
          name="home[location]"
          required
        />
      </div>
      <div class="col-12">
        <label for="image" class="form-label">Image Url</label>
        <input
          type="text"
          class="form-control"
          id="image"
          name="home[image]"
          required
        />
      </div>
      <div class="col-md-6">
        <label for="price" class="form-label">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="home[price]"
            required
          />
        </div>
      </div>
      <div class="col-md-2">
        <label for="bedrooms" class="form-label">Bedrooms</label>
        <input
          type="number"
          class="form-control"
          id="bedrooms"
          name="home[bedrooms]"
          required
        />
      </div>
      <div class="col-md-2">
        <label for="bathrooms" class="form-label">Bathrooms</label>
        <input
          type="number"
          class="form-control"
          id="bathrooms"
          name="home[bathrooms]"
          required
        />
      </div>
      <div class="col-md-2">
        <label for="sqft" class="form-label">Sqft</label>
        <input type="text" class="form-control" id="sqft" name="home[sqft]" />
      </div>
      <div class="col-12">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          class="form-control"
          id="description"
          name="home[description]"
          required
        ></textarea>
      </div>
      <div class="col-3">
        <button type="submit" class="btn btn-primary mb-3">Submit</button>
      </div>
      <a href="/buy" class="back-home"
        ><i class="fa-solid fa-angle-left left-angle mb-3"></i>Back to homes</a
      >
    </form>
  </div>
</article>
